/* pages/exercise/exercise.wxss */
.exercise,.test{
  width: 90%;
}
.item{
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-top: 20rpx;
  padding: 20rpx 0;
  border-bottom: 1px solid #ccc;
}
image{
  width: 120rpx;
  height: 120rpx;
  border-radius: 100%;
}
.item .detail{
  flex-grow: 1;
  margin-left: 20rpx;
}
.nodata{
  position: absolute;
  top: 50%;
  transform: translateY(-50%);
  width: 80%;
  text-align: center;
  line-height: 2;
}
.nodata image{
  width: 200rpx;
  height: 200rpx;
  margin-bottom: 80rpx;
}
.nodata navigator{
  margin-top: 50rpx;
  border: 1px solid #333;
  padding: 10rpx 30rpx;
  font-size: 28rpx;
  border-radius: 5rpx;
}