/**index.wxss**/
page{background-image: linear-gradient(to top, #fad0c4 0%, #fad0c4 1%, #ffd1ff 100%);background-attachment: fixed;}
.wrap{position: absolute;width: 100%;height: 100%;font-size: 32rpx;text-align: center;}
.content{position: absolute;width: 100%;top: 50%;transform: translateY(-50%);}
.label{margin-top: 100rpx;color: #999;}
.takePhoto{position: fixed;bottom: 100rpx;left: 50%;width: 40%;height: 80rpx;line-height: 80rpx;border: 1px solid #eee;border-radius: 10rpx;color: #fff;transform: translateX(-50%);}